@{
    ViewData["Title"] = "New Registration";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeManagmentCore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmployeeManagmentCore.styles.css" asp-append-version="true" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style type="text/css">
    label {
        font-family: sans-serif;
    }

    h5, h4, h3, h2, h1 {
        font-family: sans-serif;
    }

    body {
        background: linear-gradient(to right, #EFF6FC, #BFDDF4);
    }

    .bRad {
        border-radius: 10px
    }
</style>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5 p-lg-5">
                <h3 style="font-family: sans-serif;">
                    New Employee Registration
                </h3>
            </div>
            <div class="col-md-7  p-lg-5">
                <div class="card bRad" style="width: 50rem;">
                    <div class="card-body p-0 bRad">
                        <h5 class="card-title p-2" style="border-radius: 10px 10px 0px 0px;background:linear-gradient(to right,#EFF6FC,#f3ddfa)">Employee Registration</h5>
                    </div>
                    <div class="p-2">
                        <div class="row">
                            <div class="col">
                                <label class="text-start">First Name:</label>
                                <input class="form-control" type="text" id="lblFirstName" placeholder="Enter First Name" />
                            </div>
                            <div class="col">
                                <label class="text-start">Last Name:</label>
                                <input class="form-control" type="text" id="lblLastName" placeholder="Enter Last Name" />
                            </div>
                            <div class="col">
                                <label class="text-start">Country:</label>
                                <input class="form-control" type="text" id="lblCountry" placeholder="Enter Country" />
                            </div>

                        </div>
                        <div class="row mt-2">
                            <div class="col">
                                <label class="text-start">Address:</label>
                                <input class="form-control" type="text" id="lblAddress" placeholder="Enter Address" />
                            </div>
                            <div class="col">
                                <label class="text-start">Email:</label>
                                <input class="form-control" type="text" id="lblEmail" placeholder="Enter Email" />
                            </div>
                            <div class="col">
                                <label class="text-start">State</label>
                                <input class="form-control" type="text" id="lblState" placeholder="Enter State" />
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col">
                                <label class="text-start">Gender:</label>
                                <input class="form-control" type="text" id="lblGender" placeholder="Enter Gender" />
                            </div>
                            <div class="col">
                                <label class="text-start">UserType:</label>
                                <input class="form-control" type="text" id="lblUserType" placeholder="Select UserType"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>
